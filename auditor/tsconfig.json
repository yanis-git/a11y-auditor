{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "lib": [
      "dom",
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "../dist/auditor",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "jest.config.ts"
  ]
}
