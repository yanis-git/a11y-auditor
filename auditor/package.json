{
  "name": "@a11y-auditor/auditor",
  "version": "1.0.0",
  "description": "Chromeless bot to check accessibility criteria",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "tsc --project tsconfig.json",
    "watch": "tsc --watch --project tsconfig.json",
    "serve": "python3 -m http.server --directory tests/data",
    "start": "node ../dist/auditor/index.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanis-git/a11y-auditor.git"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "WCAG"
  ],
  "author": "Yanis GHIDOUCHE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yanis-git/a11y-auditor/issues"
  },
  "homepage": "https://github.com/yanis-git/a11y-auditor#readme",
  "dependencies": {
    "puppeteer": "^13.5.2",
    "puppeteer-extra": "^3.2.3",
    "puppeteer-extra-plugin-stealth": "^2.9.0"
  },
  "devDependencies": {
    "typescript": "^4.6.3",
    "@tsconfig/node14": "^1.0.1",
    "@types/node": "^17.0.23",
    "@types/puppeteer": "^5.4.5",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest-environment-puppeteer": "^5.0.0",
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "jest-puppeteer": "^6.1.0",
    "tslint": "^6.1.3"
  }
}
