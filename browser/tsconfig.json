{
  "compilerOptions": {
    "outDir": "../dist/browser/",
    "baseUrl": ".",
    "module": "es2020",
    "target": "es2017",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom", "esnext"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}
